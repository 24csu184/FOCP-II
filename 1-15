// Q6. WAP that calculates area and perimeter of rectangle using user-provided lenght and width.
#include <iostream>
using namespace std;
int main() {
    int l,b,p;
    cout<<"Enter lenght and width=";
    cin>>l>>b;
    p=(l+b)+(l+b);
    cout<<"Area="<<l*b<<endl<<"Perimeter="<<p;
    return 0;
}

