// Ask the user to input two numbers and a mathematical operator (+,-,*,/) and display the result of the operation.
#include <iostream>
using namespace std;
int main() {
    int a,b;
    char op;
    cout<<"Enter Numbers=";
    cin>>a>>b;
    cout<<"Enter Operator=";
    cin>>op;
    switch (op){
        case '+':
        cout<<a+b;
        break;
        case '-':
        cout<<a-b;
        break;
        case '*':
        cout<<a*b;
        break;
        case '/':
        cout<<a/b;
        break;
    }
    return 0;
}

