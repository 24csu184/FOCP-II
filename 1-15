// WAP that reads a user's name and age then prints,"Hello [name],you're [age] years old"
#include <iostream>
using namespace std;
int main() {
    int age;
	char name[50];
	cout<<"enter name-";
	cin.getline(name,50);
	cout<<"enter your age-";
	cin>>age;
	cout<<"Hello "<<name<<" ,you're "<<age<<" years old";
    return 0;
}

