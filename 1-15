//Q8 Wap that takes userâ€™s name and age and displays greeting with the number of days the user has lived
#include<iostream>
using namespace std;
int main()
{
	int age;
	char name[50];
	cout<<"enter name";
	cin.getline(name,50);
	cout<<"enter your age";
	cin>>age;
	int days = age*365;
	cout<<"Greetings "<<name<<", you have lived "<<days<<" days";
    return 0;
}

